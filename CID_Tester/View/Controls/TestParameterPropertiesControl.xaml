<UserControl x:Class="CID_Tester.View.Controls.TestParameterPropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CID_Tester.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <StackPanel Margin="10">
        <TextBlock Margin="0 0 0 20">Main</TextBlock>
        <StackPanel Margin="20 0 0 10" Orientation="Horizontal">
            <TextBlock Margin="0 0 10 0" MinWidth="40">Name</TextBlock>
            <TextBox Text="{Binding Name}" Width="140" />
        </StackPanel>
        <StackPanel Margin="20 0 0 10" Orientation="Horizontal">
            <TextBlock Margin="0 0 10 0" MinWidth="40">Device</TextBlock>
            <ComboBox ItemsSource="{Binding Devices}" DisplayMemberPath="DutName" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding SelectedDevice, UpdateSourceTrigger=PropertyChanged}" Width="140" />
        </StackPanel>
        <StackPanel Margin="20 0 0 10" Orientation="Horizontal">
            <TextBlock Margin="0 0 10 0" MinWidth="40">Metric</TextBlock>
            <TextBox Text="{Binding Metric}" Width="140" />
        </StackPanel>
        <StackPanel Margin="20 0 0 10" Orientation="Horizontal">
            <TextBlock Margin="0 0 10 0" MinWidth="40">Target</TextBlock>
            <TextBox Text="{Binding Target}" Width="140" />
        </StackPanel>
    </StackPanel>
</UserControl>
