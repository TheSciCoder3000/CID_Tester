
    
<UserControl x:Class="CID_Tester.Controls.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CID_Tester.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    


    <StackPanel Orientation="Vertical" Margin="20">
        <Border CornerRadius="10" Background="#2D2D30">
            <StackPanel Orientation="Horizontal" Background="Transparent" Margin="20">
                
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Status Report" Foreground="White"/>
                    <DataGrid Name="ViewDataTable" Margin="0 30 0 0" AllowDrop="False" IsReadOnly="True" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>

    
