<UserControl x:Class="CID_Tester.Controls.TestPlanStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CID_Tester.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Center">
        <TextBlock>
            <Hyperlink Command="{Binding ImportCsvCommand}">Import .csv file</Hyperlink>
            or 
            <Hyperlink Command="{Binding NavigateToTestPlanCommand}">Create new Test Plan</Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
